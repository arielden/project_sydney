# Sydney Learning Platform - Production Environment Configuration
# Copy this file to .env.prod and update the values for production deployment

# Database Configuration
POSTGRES_DB=sydney_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_database_password_here

# pgAdmin Configuration  
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=your_secure_pgadmin_password_here

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=24h

# Port Configuration
FRONTEND_PORT=80
BACKEND_PORT=3000
POSTGRES_PORT=5432
PGADMIN_PORT=5050

# Frontend Configuration
FRONTEND_URL=http://localhost:80

# Database Connection (auto-generated from above values)
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}