{
  "name": "sydney-backend",
  "version": "1.0.0",
  "description": "Backend API for Sydney Adaptive Learning Platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:migrate": "ts-node -e \"import { runAllMigrations } from './src/config/database'; runAllMigrations().then(success => process.exit(success ? 0 : 1))\"",
    "db:seed:categories": "ts-node -e \"import { runSeed } from './src/config/database'; runSeed('../../database/seeds/seed_categories.sql').then(success => process.exit(success ? 0 : 1))\"",
    "db:seed:questions": "ts-node -e \"import { runSeed } from './src/config/database'; runSeed('../../database/seeds/seed_development_m2m.sql').then(success => process.exit(success ? 0 : 1))\"",
    "db:drop": "ts-node -e \"import { dropDatabase } from './src/config/database'; dropDatabase().then(success => process.exit(success ? 0 : 1))\"",
    "db:recreate": "npm run db:drop && npm run db:init && npm run db:migrate && npm run db:seed:categories && npm run db:seed:questions",
    "db:init": "ts-node -e \"import { initializeDatabase } from './src/config/database'; initializeDatabase().then(success => process.exit(success ? 0 : 1))\""
  },
  "keywords": [
    "express",
    "typescript",
    "postgresql",
    "api"
  ],
  "author": "Sydney Learning Platform",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
